{{#partial "content"}}

<h1>Enter Your Hero Details</h1>
<form action='/heros/new' method="POST>
 <div class="form-group">
   <label for="hero">Hero Name:</label>
   <input id="hero" name="hero" class="form-control" type="text">
 </div>
 <div class="form-group">
   <label for="age">Hero Age:</label>
   <input id="age" name="age" class="form-control" type="number">
 </div>
 <div>
    <label for="power">Powers:</label>
    <input id="power" name="power" class="form-control" type="text">
 </div>
 <div>
    <label for="weakness">Weakness:</label>
    <input id="weakness" name="weakness" class="form-control" type="text">
 </div>
 <button type="submit" class="btn">Go!</button>
</form>
