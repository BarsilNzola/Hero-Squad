{{#partial "content"}}

    <div class="row">
        <div class="col-md-6">
            <h1>Enter Your Hero Details</h1>
            <form action='/heroes' method="POST">
                <div class="form-group">
                    <label for="name">Hero Name:</label>
                    <input id="name" name="name" class="form-control" type="text">
                </div>
                <div class="form-group">
                    <label for="nickname">Hero Code Name:</label>
                    <input id="nickname" name="nickname" class="form-control" type="text">
                </div>
                <div class="form-group">
                    <label for="age">Hero Age:</label>
                    <input id="age" name="age" class="form-control" type="number">
                </div>
                <div>
                    <label for="power">Powers:</label>
                    <input id="power" name="power" class="form-control" type="text">
                </div>
                <div>
                    <label for="weakness">Weakness:</label>
                    <input id="weakness" name="weakness" class="form-control" type="text">
                </div>
                <button type="submit" class="btn">Go!</button>
            </form>
            <!--form.hbs.-->
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}